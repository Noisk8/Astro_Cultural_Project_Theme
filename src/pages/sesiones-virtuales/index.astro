---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Juntxs: Encuentros vivos, cultura en movimiento | Sesiones Virtuales">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-white mb-8 text-center">Sesiones Virtuales</h1>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Aquí se pueden agregar dinámicamente los contenidos multimedia -->
        <div class="bg-gray-100 p-4 rounded-lg">
          <div class="aspect-w-16 aspect-h-9 mb-4">
            <div class="bg-gray-200 rounded-lg flex items-center justify-center">
              <span class="text-gray-500">Contenido Multimedia</span>
            </div>
          </div>
          <h3 class="text-lg font-semibold">Título de la Sesión</h3>
          <p class="text-gray-600">Descripción breve de la sesión virtual</p>
        </div>
      </div>
    </div>
  </main>
</Layout>