---
import Layout from '../../layouts/Layout.astro';

const artistas = [
  {
    id: 'artista1',
    nombre: 'María González',
    descripcion: 'Artista visual especializada en arte contemporáneo',
    imagen: 'https://via.placeholder.com/400x300'
  },
  {
    id: 'artista2',
    nombre: 'Carlos Ruiz',
    descripcion: 'Artista multidisciplinario enfocado en la escultura y el arte sonoro',
    imagen: 'https://via.placeholder.com/400x300'
  },
  {
    id: 'artista3',
    nombre: 'Ana Martínez',
    descripcion: 'Performer y artista visual',
    imagen: 'https://via.placeholder.com/400x300'
  }
];
---

<Layout title="Circulación - Artistas">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-white mb-8 text-center">Nuestros Artistas</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {artistas.map(artista => (
        <a href={`/circulacion/${artista.id}`} class="block group">
          <div class="bg-white rounded-lg shadow-md overflow-hidden transition transform hover:scale-105">
            <img src={artista.imagen} alt={artista.nombre} class="w-full h-48 object-cover" />
            <div class="p-6">
              <h2 class="text-2xl font-semibold text-gray-900 mb-2">{artista.nombre}</h2>
              <p class="text-gray-600">{artista.descripcion}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>