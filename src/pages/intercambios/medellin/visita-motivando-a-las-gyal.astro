---
import Layout from '../../../layouts/Layout.astro';
import { ciudades } from '../../../data/ciudades';

// Obtener los datos del evento desde el archivo de datos
const ciudadId = 'medellin';
const eventoId = 'visita-motivando-a-las-gyal';
const ciudad = ciudades[ciudadId];
const evento = ciudad.eventos.find(e => e.id === eventoId);

// Contenido adicional personalizado para este evento
const contenidoAdicional = {
  descripcionDetallada: `
    "Motivando a las Gyal" es un colectivo de mujeres artistas que trabajan en la intersección 
    entre el arte, el activismo y la educación. Su trabajo se enfoca en empoderar a mujeres y 
    disidencias a través de procesos creativos y colaborativos. Durante esta visita, conoceremos 
    su espacio de trabajo, sus metodologías y proyectos en curso.
  `,
  programacion: [
    { hora: '14:00', actividad: 'Bienvenida y recorrido por el espacio' },
    { hora: '14:30', actividad: 'Presentación del colectivo y sus proyectos' },
    { hora: '15:30', actividad: 'Taller participativo' },
    { hora: '17:00', actividad: 'Conversatorio abierto' },
    { hora: '18:00', actividad: 'Cierre y compartir' }
  ],
  integrantes: [
    'Colectivo Motivando a las Gyal',
    'Artistas invitadas'
  ],
  ubicacion: 'Barrio Prado, Medellín',
  galeria: [
    '/imagenes/motivando.jpg',
    '/imagenes/enplato.jpg'
  ],
  testimonios: [
    {
      texto: "La experiencia con Motivando a las Gyal transformó mi forma de entender el arte como herramienta de cambio social.",
      autor: "Participante 2023"
    },
    {
      texto: "Un espacio seguro para experimentar, crear y compartir saberes entre mujeres.",
      autor: "Artista invitada"
    }
  ]
};
---

<Layout title={evento.titulo}>
  <main class="max-w-5xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
      <img src={evento.imagen} alt={evento.titulo} class="w-full min-h-[80vh] sm:h-96 object-cover" />
      <div class="p-4 sm:p-8">
        <h1 class="text-3xl sm:text-4xl font-bold mb-3 sm:mb-4">{evento.titulo}</h1>
        <p class="text-gray-600 mb-4 sm:mb-6 text-lg sm:text-xl">{evento.fecha}</p>
        
        <!-- Descripción original del evento -->
        <div class="mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-semibold mb-2 sm:mb-3">Descripción</h2>
          <p class="text-gray-700">{evento.descripcion}</p>
        </div>
        
        <!-- Contenido personalizado adicional -->
        <div class="mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-semibold mb-2 sm:mb-3">Sobre el colectivo</h2>
          <p class="text-gray-700">{contenidoAdicional.descripcionDetallada}</p>
        </div>
        
        <!-- Ubicación -->
        <div class="mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-semibold mb-2 sm:mb-3">Ubicación</h2>
          <p class="text-gray-700">{contenidoAdicional.ubicacion}</p>
        </div>
        
        <!-- Programación -->
        <div class="mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-semibold mb-2 sm:mb-3">Programación</h2>
          <ul class="space-y-2">
            {contenidoAdicional.programacion.map(item => (
              <li class="flex">
                <span class="font-medium w-16 sm:w-20">{item.hora}</span>
                <span>{item.actividad}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Integrantes -->
        <div class="mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-semibold mb-2 sm:mb-3">Participantes</h2>
          <ul class="list-disc pl-5 space-y-1">
            {contenidoAdicional.integrantes.map(integrante => (
              <li>{integrante}</li>
            ))}
          </ul>
        </div>
        
        <!-- Testimonios -->
        <div class="mb-6 sm:mb-8">
          <h2 class="text-xl sm:text-2xl font-semibold mb-2 sm:mb-3">Testimonios</h2>
          <div class="space-y-4">
            {contenidoAdicional.testimonios.map(testimonio => (
              <div class="bg-gray-50 p-3 sm:p-4 rounded-lg italic">
                <p class="mb-2">"{testimonio.texto}"</p>
                <p class="text-right font-medium">— {testimonio.autor}</p>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Galería de imágenes -->
        <div>
          <h2 class="text-xl sm:text-2xl font-semibold mb-3 sm:mb-4">Galería</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {contenidoAdicional.galeria.map(imagen => (
              <img src={imagen} alt="Imagen del colectivo" class="rounded-lg shadow-md h-40 sm:h-48 w-full object-cover" />
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Botón para volver a la página de la ciudad -->
    <div class="text-center mt-6 sm:mt-8">
      <a 
        href="/intercambios/medellin" 
        class="inline-block px-5 sm:px-6 py-2 sm:py-3 bg-primary text-white rounded-md hover:bg-purple-700 transition-colors"
      >
        Volver a eventos de Medellín
      </a>
    </div>
  </main>
</Layout>
