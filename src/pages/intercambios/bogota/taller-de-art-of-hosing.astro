---
import Layout from '../../../layouts/Layout.astro';
import { ciudades } from '../../../data/ciudades';

// Obtener los datos del evento desde el archivo de datos
const ciudadId = 'bogota';
const eventoId = 'Taller de Art of hosing';
const ciudad = ciudades[ciudadId];
const evento = ciudad.eventos.find(e => e.id === eventoId);

// Contenido adicional personalizado para este evento
const contenidoAdicional = {
  descripcionDetallada: `
    El Taller de Art of Hosting es un espacio de aprendizaje y práctica de metodologías 
    participativas para la facilitación de conversaciones significativas y procesos colaborativos. 
    En este taller, los participantes aprenderán técnicas para crear espacios de diálogo abierto, 
    escucha profunda y co-creación.
  `,
  programacion: [
    { hora: '9:00', actividad: 'Bienvenida y presentación' },
    { hora: '9:30', actividad: 'Introducción al Art of Hosting' },
    { hora: '11:00', actividad: 'Práctica de Circle Way' },
    { hora: '14:00', actividad: 'World Café: Conversaciones que importan' },
    { hora: '16:00', actividad: 'Cosecha colectiva y cierre' }
  ],
  facilitadores: [
    'Colectivo El Eje',
    'Invitados internacionales'
  ],
  galeria: [
    '/imagenes/foto2.jpg',
    '/imagenes/foto3.jpg'
  ]
};
---

<Layout title={evento.titulo}>
  <main class="max-w-5xl mx-auto px-4 py-12">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
      <img src={evento.imagen} alt={evento.titulo} class="w-full h-96 object-cover" />
      <div class="p-8">
        <h1 class="text-4xl font-bold mb-4">{evento.titulo}</h1>
        <p class="text-gray-600 mb-6 text-xl">{evento.fecha}</p>
        
        <!-- Descripción original del evento -->
        <div class="mb-8">
          <h2 class="text-2xl font-semibold mb-3">Descripción</h2>
          <p class="text-gray-700">{evento.descripcion}</p>
        </div>
        
        <!-- Contenido personalizado adicional -->
        <div class="mb-8">
          <h2 class="text-2xl font-semibold mb-3">Sobre el taller</h2>
          <p class="text-gray-700">{contenidoAdicional.descripcionDetallada}</p>
        </div>
        
        <!-- Programación -->
        <div class="mb-8">
          <h2 class="text-2xl font-semibold mb-3">Programación</h2>
          <ul class="space-y-2">
            {contenidoAdicional.programacion.map(item => (
              <li class="flex">
                <span class="font-medium w-20">{item.hora}</span>
                <span>{item.actividad}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Facilitadores -->
        <div class="mb-8">
          <h2 class="text-2xl font-semibold mb-3">Facilitadores</h2>
          <ul class="list-disc pl-5 space-y-1">
            {contenidoAdicional.facilitadores.map(facilitador => (
              <li>{facilitador}</li>
            ))}
          </ul>
        </div>
        
        <!-- Galería de imágenes -->
        <div>
          <h2 class="text-2xl font-semibold mb-4">Galería</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {contenidoAdicional.galeria.map(imagen => (
              <img src={imagen} alt="Imagen del taller" class="rounded-lg shadow-md h-48 w-full object-cover" />
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Botón para volver a la página de la ciudad -->
    <div class="text-center mt-8">
      <a 
        href="/intercambios/bogota" 
        class="inline-block px-6 py-3 bg-primary text-white rounded-md hover:bg-purple-700 transition-colors"
      >
        Volver a eventos de Bogotá
      </a>
    </div>
  </main>
</Layout>
