---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Welcome from '../components/Welcome.astro';
import Circulacion from '../components/Circulacion.astro';
import Intercambios from '../components/Intercambios.astro';
import SesionesVirtuales from '../components/SesionesVirtuales.astro';
---

<Layout title="Mockups - Vista General">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-12 text-white">Mockups del Proyecto</h1>

    <!-- Navegación rápida -->
    <nav class="bg-white/10 backdrop-blur-sm p-4 rounded-lg mb-8">
      <h2 class="text-xl font-semibold mb-4 text-white">Navegación Rápida</h2>
      <ul class="space-y-2 text-white">
        <li><a href="#homepage" class="hover:text-primary">Homepage</a></li>
        <li><a href="#components" class="hover:text-primary">Componentes</a></li>
        <li><a href="#pages" class="hover:text-primary">Páginas</a></li>
      </ul>
    </nav>

    <!-- Homepage Preview -->
    <section id="homepage" class="mockup-section mb-16">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-white">Homepage</h2>
        <button onclick="downloadAsPNG('homepage')" class="download-btn">
          Descargar PNG
        </button>
      </div>
      <div class="bg-white/5 backdrop-blur-sm p-8 rounded-lg" id="homepage-content">
        <Hero />
        <Circulacion />
        <Intercambios />
        <SesionesVirtuales />
      </div>
    </section>

    <!-- Components Preview -->
    <section id="components" class="mb-16">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-white">Componentes Individuales</h2>
      </div>
      
      <div class="grid gap-8" id="components-content">
        <div class="component-preview" id="hero-component">
          <div class="flex justify-between items-center">
            <h3 class="component-title">&lt;Hero /&gt;</h3>
            <button onclick="downloadAsPNG('hero-component')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <div class="component-content">
            <Hero />
          </div>
        </div>

        <div class="component-preview" id="welcome-component">
          <div class="flex justify-between items-center">
            <h3 class="component-title">&lt;Welcome /&gt;</h3>
            <button onclick="downloadAsPNG('welcome-component')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <div class="component-content">
            <Welcome />
          </div>
        </div>

        <div class="component-preview" id="circulacion-component">
          <div class="flex justify-between items-center">
            <h3 class="component-title">&lt;Circulacion /&gt;</h3>
            <button onclick="downloadAsPNG('circulacion-component')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <div class="component-content">
            <Circulacion />
          </div>
        </div>

        <div class="component-preview" id="intercambios-component">
          <div class="flex justify-between items-center">
            <h3 class="component-title">&lt;Intercambios /&gt;</h3>
            <button onclick="downloadAsPNG('intercambios-component')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <div class="component-content">
            <Intercambios />
          </div>
        </div>

        <div class="component-preview" id="sesiones-component">
          <div class="flex justify-between items-center">
            <h3 class="component-title">&lt;SesionesVirtuales /&gt;</h3>
            <button onclick="downloadAsPNG('sesiones-component')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <div class="component-content">
            <SesionesVirtuales />
          </div>
        </div>
      </div>
    </section>

    <!-- Pages Preview -->
    <section id="pages" class="mb-16">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-white">Páginas</h2>
      </div>
      
      <div class="grid gap-8" id="pages-content">
        <div class="page-preview" id="circulacion-page">
          <div class="flex justify-between items-center">
            <h3 class="page-title">Circulación</h3>
            <button onclick="captureAndDownloadPage('/circulacion', 'circulacion')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <iframe src="/circulacion" class="w-full h-[600px] rounded-lg border-2 border-white/20"></iframe>
        </div>

        <div class="page-preview" id="intercambios-page">
          <div class="flex justify-between items-center">
            <h3 class="page-title">Intercambios</h3>
            <button onclick="captureAndDownloadPage('/intercambios', 'intercambios')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <iframe src="/intercambios" class="w-full h-[600px] rounded-lg border-2 border-white/20"></iframe>
        </div>

        <div class="page-preview" id="sesiones-page">
          <div class="flex justify-between items-center">
            <h3 class="page-title">Sesiones Virtuales</h3>
            <button onclick="captureAndDownloadPage('/sesiones-virtuales', 'sesiones')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <iframe src="/sesiones-virtuales" class="w-full h-[600px] rounded-lg border-2 border-white/20"></iframe>
        </div>

        <div class="page-preview" id="acercade-page">
          <div class="flex justify-between items-center">
            <h3 class="page-title">Acerca de</h3>
            <button onclick="captureAndDownloadPage('/acercade', 'acercade')" class="download-btn-small">
              Descargar
            </button>
          </div>
          <iframe src="/acercade" class="w-full h-[600px] rounded-lg border-2 border-white/20"></iframe>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .mockup-section {
    @apply bg-white/5 backdrop-blur-sm rounded-lg overflow-hidden;
  }

  .component-preview, .page-preview {
    @apply bg-white/5 backdrop-blur-sm rounded-lg overflow-hidden p-6;
  }

  .component-title, .page-title {
    @apply text-xl font-mono bg-white/10 text-white p-2 rounded;
  }

  .component-content {
    @apply bg-black/20 rounded-lg p-4 mt-4;
  }

  .download-btn {
    @apply bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/80 transition-colors;
  }

  .download-btn-small {
    @apply bg-primary/80 text-white px-3 py-1 rounded hover:bg-primary transition-colors text-sm;
  }
</style>

<script>
  import html2canvas from 'html2canvas';

  // Función para descargar componentes individuales
  function downloadAsPNG(elementId) {
    const element = document.getElementById(elementId);
    if (!element) return;

    // Configuración para mejor calidad
    const scale = 2;
    
    html2canvas(element, {
      scale: scale,
      logging: false,
      useCORS: true,
      allowTaint: true,
      backgroundColor: null,
    }).then(canvas => {
      const link = document.createElement('a');
      link.download = `mockup-${elementId}-${new Date().toISOString().slice(0, 10)}.png`;
      link.href = canvas.toDataURL('image/png');
      link.click();
    });
  }

  // Función para capturar y descargar páginas completas
  async function captureAndDownloadPage(url, name) {
    // Crear una nueva ventana temporal
    const newWindow = window.open(url, '_blank');
    
    // Esperar a que la página cargue
    await new Promise(resolve => setTimeout(resolve, 2000));

    // Capturar la página
    html2canvas(newWindow.document.body, {
      scale: 2,
      logging: false,
      useCORS: true,
      allowTaint: true,
      backgroundColor: null,
      windowWidth: 1920,
      windowHeight: 1080,
      scrollY: 0,
      scrollX: 0,
    }).then(canvas => {
      // Descargar la imagen
      const link = document.createElement('a');
      link.download = `page-${name}-${new Date().toISOString().slice(0, 10)}.png`;
      link.href = canvas.toDataURL('image/png');
      link.click();
      
      // Cerrar la ventana temporal
      newWindow.close();
    });
  }

  // Hacer las funciones disponibles globalmente
  window.downloadAsPNG = downloadAsPNG;
  window.captureAndDownloadPage = captureAndDownloadPage;
</script>
